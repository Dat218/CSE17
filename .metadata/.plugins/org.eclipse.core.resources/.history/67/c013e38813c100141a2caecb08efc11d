public class FootballScore extends Score{
	private int quarter;
	private String time;
	private int patPts;
	private String patPlay;
	private String type;
	
	public FootballScore(String team, String type, int quarter, String time, String play, String patPts, String patPlay) {
		super(team, play);
		this.quarter = quarter;
		this.time = time;
		this.patPts = patPts;
		this.patPlay = patPlay;
		this.type = type;
		int points = 0;
		if (type.equals("TD")) {
			points = 6 + this.patPts;			
		}
		else if (type.equals("FG")) {
			points = 3;
		}
		else if (type.equals("SA")) {
			points = 2;
		}
		setPoints(points);
	}
	
	public FootballScore(String team, String type, int quarter, String time, String play) {
		super(team, play);
		this.quarter = quarter;
		this.time = time;
		this.type = type;
		int points = 0;
		if (type.equals("TD")) {
			points = 6 + this.patPts;
		}
		else if (type.equals("FG")) {
			points = 3;
		}
		else if (type.equals("SA")) {
			points = 2;
		}
		setPoints(points);
	}
	
	public int getQuarter() {
		return quarter;
	}
	
	public String getTime() {
		return time;
	}
	
	public String getType() {
		return type;
	}
	
	public String toString() {
		String boxPlay = "";
		if (patPts == 1) {
			boxPlay+=getTeam()+" - "+getPlay()+this.patPlay+this.time;
			return boxPlay;
		}
		else {
			boxPlay+=getTeam()+" - "+getPlay()+this.time;
			return boxPlay;
		}
	}
}
        